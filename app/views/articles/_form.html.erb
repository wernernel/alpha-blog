<%= render "shared/errors", obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :title %>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of artircle", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article description" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn-sm btn-primary btn-lg" %>
      </div>
    </div>
  </div>
</div>

<% end %>